{
  "properties": {
    "displayName": "Deny public IP on NICs/VMs",
    "policyType": "Custom",
    "mode": "All",
    "description": "Prevents association of Public IPs to NICs/VMs.",
    "metadata": {
      "category": "Network"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "anyOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/networkInterfaces"
          },
          {
            "field": "type",
            "equals": "Microsoft.Compute/virtualMachines"
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}